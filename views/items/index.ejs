<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Inventory Management</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Inventory List</h1>
  <a href="/items/add">Add New Item</a>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.category %></td>
          <td><%= item.quantity %></td>
          <td><%= item.price %></td>
          <td><%= item.description %></td>
          <td>
            <a href="/items/edit/<%= item._id %>">Edit</a>
            <a href="/items/delete/<%= item._id %>">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
